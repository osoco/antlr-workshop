//;-*- mode: antlr -*-
grammar UrlChecker;

/*------------------------------------------------------------------
 * PARSER RULES
 *------------------------------------------------------------------*/

command : quit;

quit: QUIT;

/*------------------------------------------------------------------
 * LEXER RULES
 *------------------------------------------------------------------*/

WS : ( '\t' | ' ' | '\r' | '\n'| '\u000C' )+ -> skip;

// keywords
CHECK_URL: 'check-url';
QUIT : 'quit';
URL: 'http' 's'? '://' ~[ ]*;
